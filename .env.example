# Solana Privacy Hackathon - Environment Configuration

# ===========================================
# RPC ENDPOINTS
# ===========================================

# Helius RPC (https://helius.dev)
HELIUS_API_KEY=your_helius_api_key
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
HELIUS_DEVNET_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Triton RPC (Special hackathon access)
TRITON_RPC_URL=your_triton_rpc_endpoint
TRITON_API_KEY=your_triton_api_key

# Standard Solana RPCs
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_URL=https://api.devnet.solana.com

# ===========================================
# WALLET CONFIGURATION
# ===========================================
WALLET_PRIVATE_KEY=your_base58_private_key
WALLET_PATH=~/.config/solana/id.json

# ===========================================
# PRIVACY TOOLS
# ===========================================

# Privacy Cash SDK
PRIVACY_CASH_API_KEY=your_privacy_cash_key
PRIVACY_CASH_ENDPOINT=https://api.privacycash.io

# Arcium (Confidential DeFi)
ARCIUM_API_KEY=your_arcium_key
ARCIUM_NETWORK=devnet

# Inco Lightning
INCO_API_KEY=your_inco_key
INCO_NETWORK=testnet

# ===========================================
# ZK CONFIGURATION
# ===========================================
NOIR_VERSION=0.30.0
ZK_PROVING_KEY_PATH=./circuits/proving_key
ZK_VERIFICATION_KEY_PATH=./circuits/verification_key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000
